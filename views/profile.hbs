<div class="row">
  <div class="col-10 mx-auto my-3">
    <div class="list-group">
      {{! <a
        type="button"
        class="list-group-item list-group-item-action"
        data-bs-toggle="modal"
        data-bs-target="#movieModal"
      >
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">movie b</h5>
          <small class="text-muted">3 days ago</small>
        </div>
        <p class="mb-1">Some placeholder content in a paragraph.</p>
        <small class="text-muted">And some muted small print.</small>
      </a> }}

      {{#if reviews}}
        {{#each reviews}}
          <a
            type="button"
            class="list-group-item list-group-item-action"
            data-bs-toggle="modal"
            data-bs-target="#review_id_{{_id}}"
          >
            <div class="d-flex w-100 justify-content-between">
              <h5>{{movie.title}}</h5>
              <small class="text-muted">{{createdAt}}</small>
            </div>
            <p class="mb-1 short-desc">{{coverDesc}}</p>
          </a>

          <div class="modal fade" id="review_id_{{_id}}" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered modal-sm">
              <div class="modal-content">
                <div class="modal-body">                        
                    <div class="col">
                        <div class="card h-100 border-0">
                            <div class="movie-list">
                                <a href="/review/view?r={{_id}}">
                                    <img src="https://image.tmdb.org/t/p/original/{{movie.image}}" class="card-img-top" alt="...">
                                    <div class="card-body">
                                        <h5 class="card-title">{{movie.title}}</h5>
                                        <p class="card-text">{{{coverDesc}}}</p>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-dark">
                  {{{deleteBtn user._id ../userId _id}}}
                  {{{editBtn user._id ../userId _id}}}
                  <a
                    href="/review/view?r={{_id}}"
                    type="button"
                    class="btn btn-secondary"
                  >Read more</a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        No Blogs
      {{/if}}
    </div>
  </div>
</div>