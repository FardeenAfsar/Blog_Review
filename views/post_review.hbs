<div class="row">
    <div class="col-12 d-flex justify-content-center mb-4">
        <h1 style="color: #fafafa;">Write your movie blog!</h1>
    </div>
    <div class="col-12 d-flex justify-content-center mt-3">
        <form action="/review/post?id={{movieId}}" method="POST" class="col s12">
            <div class="col d-flex justify-content-center">
                <input type="hidden" id="coverDesc" name="coverDesc">
                <div class="input-field">
                    <textarea name="body" id="body" required></textarea>
                </div>
            </div>

            <div class="col d-flex justify-content-center mt-3">
                <a href="/home" class="btn btn-outline-warning mx-1">Cancel</a>
                <input type="submit" value="Post" class="btn btn-outline-warning mx-1">
            </div>
        </form>
    </div>
</div>